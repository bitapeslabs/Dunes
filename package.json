{
  "name": "mezcal",
  "version": "1.0.0",
  "description": "Mezcals is runes, but without the runestone decoder or commitmenets - instead leveraging the new op_return size limit.",
  "main": "src/ndex.js",
  "scripts": {
    "build-native": "wasm-pack build ./src/rpc/mezcal/lib/native --target nodejs --out-dir ../../../../../dist",
    "build": "node esbuild.config.mjs && npm run build-native",
    "start-new": "node esbuild.config.mjs & node --expose-gc --max-old-space-size=32768 ./dist/index.js --new --server --rpc --rpc-wss",
    "start-new-debug": "node esbuild.config.mjs && node --expose-gc --max-old-space-size=32768 ./dist/index.js --new --server --rpc --rpc-wss --verbose",
    "start-new-local": "node esbuild.config.mjs & node --expose-gc --max-old-space-size=32768 ./dist/index.js --new --server --rpc --local",
    "start-new-local-debug": "node esbuild.config.mjs & node --expose-gc --max-old-space-size=32768 ./dist/index.js --new --server --rpc --local --verbose",
    "resume": "node esbuild.config.mjs & node --expose-gc --max-old-space-size=32768 ./dist/index.js --server --rpc --rpc-wss",
    "resume-debug": "node esbuild.config.mjs && node --expose-gc --max-old-space-size=32768 ./dist/index.js --server --rpc --rpc-wss --verbose",
    "resume-local": "node esbuild.config.mjs && node --expose-gc --max-old-space-size=32768 ./dist/index.js --server --rpc --local",
    "resume-local-debug": "node esbuild.config.mjs && node --expose-gc --max-old-space-size=32768 ./dist/index.js --server --rpc --local --verbose",
    "resume-rpc": "node esbuild.config.mjs && node --expose-gc --max-old-space-size=32768 ./dist/index.js --rpc",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@dotenv-run/esbuild": "^1.5.0",
    "@sequelize/postgres": "^7.0.0-alpha.41",
    "@types/express": "^5.0.1",
    "axios": "^1.7.1",
    "bitcoin-core": "^4.2.0",
    "bitcoinjs-lib": "^6.1.6",
    "chalk": "^5.4.1",
    "esbuild": "^0.25.4",
    "express": "^4.19.2",
    "pg": "^8.12.0",
    "pg-hstore": "^2.3.4",
    "sequelize": "^6.37.7",
    "ws": "^8.18.2",
    "xxhashjs": "^0.2.2",
    "zod": "^3.24.4"
  },
  "devDependencies": {
    "@types/cors": "^2.8.18",
    "@types/node": "^18.19.39",
    "@types/ws": "^8.18.1",
    "cors": "^2.8.5",
    "ts-node": "^10.9.2"
  }
}
